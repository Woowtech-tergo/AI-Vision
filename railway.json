{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacks": {
            "phases": {
                "install": {
                    "nixPkgs": [
                        "mesa",
                        "glib"
                    ],
                    "pythonDependencies": [
                        "mediapipe",
                        "opencv-python-headless",
                        "opencv-contrib-python-headless",
                        "gradio==5.7.0",
                        "ultralytics",
                        "torch",
                        "torchvision",
                        "torchaudio",
                        "matplotlib",
                        "numpy",
                        "scipy"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "python3 app.py"
    }
}
