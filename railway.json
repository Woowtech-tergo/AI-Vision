{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacks": {
      "phases": {
        "setup": {
          "nixPkgs": [
            "mesa",
            "glib",
            "gtk3",
            "libglvnd"
          ]
        },
        "install": {
          "cmds": [
            "pip install --no-cache-dir -r requirements.txt",
            "python3 -m pip install mediapipe==0.10.18",
            "python3 -m pip uninstall -y opencv-python opencv-contrib-python",
            "python3 -m pip install opencv-contrib-python-headless==4.7.0.72"
          ]
        }
      }
    }
  },
  "deploy": {
    "startCommand": "python3 app.py"
  }
}
